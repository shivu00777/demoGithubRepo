<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">

    <!-- Smoke Tests -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke" />
            </run>
        </groups>
        <classes>
            <class name="testNG_Grouping.LoginTests"/>
            <class name="testNG_Grouping.PaymentTests"/>
        </classes>
    </test>

    <!-- Regression Tests -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="testNG_Grouping.LoginTests"/>
            <class name="testNG_Grouping.PaymentTests"/>
        </classes>
    </test>

</suite>
